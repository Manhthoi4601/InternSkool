@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Khôi phục mật khẩu";
    Layout = "_Login";
}

<div class="container">
    <div class="loginbox">
        <div class="login-left">
            <img class="img-fluid" src="~/assets/img/login.png" alt="Logo">
        </div>
        <div class="login-right">
            <div class="login-right-wrap">
                <h1>Reset Password</h1>
                <p class="account-subtitle">Let Us Help You</p>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">Địa chỉ Email đã đăng ký<span class="login-danger">*</span></label>
                        <input asp-for="Input.Email" class="form-control" type="email" required>
                        <span class="profile-views"><i class="fas fa-envelope"></i></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark btn-block" type="submit">Đặt Lại Mật Khẩu</button>
                    </div>
                    <div class="form-group mb-0">
                        <a class="btn btn-primary btn-block" asp-page="./Login">Đăng Nhập</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>