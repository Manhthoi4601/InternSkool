@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Xác thực hai yếu tố";
    Layout = "_Login";
}

<div class="container">
    <div class="loginbox">
        <div class="login-left">
            <img class="img-fluid" src="~/assets/img/login.png" alt="Logo">
        </div>
        <div class="login-right">
            <div class="login-right-wrap">
                <h1><a id="forgot-password" asp-controller="Home" asp-action="Index">Intern</a></h1>
                <p class="account-subtitle">Thông tin đăng nhập của bạn được bảo vệ bằng ứng dụng xác thực. Nhập mã xác thực của bạn bên dưới.</p>
                <h2>@ViewData["Title"]</h2>

                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <input asp-for="RememberMe" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    </div>
                    <div class="forgotpass">
                        <div class="remember-me">
                            <label asp-for="Input.RememberMachine" class="custom_check mr-2 mb-0 d-inline-flex remember-me">
                                <input asp-for="Input.RememberMachine" />
                                @Html.DisplayNameFor(m => m.Input.RememberMachine)
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark btn-block" type="submit" id="login-submit">Đăng Nhập</button>
                    </div>
                    <div class="login-or">
                        <span class="or-line"></span>
                        <span class="span-or">OR</span>
                    </div>

                    <div class="social-login">
                        <p>
                            Không thể xác minh? Bạn có thể
                            <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">đăng nhập bằng mã khôi phục</a>.
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}