@model SinhVien

<form id="create-form">
    <div class="modal-header">
        <h5 class="modal-title">Thêm Mới</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="row g-3">
            <div class="form-group col-md-6">
                <label class="form-label">Họ Tên</label>
                <input type="text" class="form-control" name="hotensv" required />
            </div>
            <div class="form-group col-md-6">
                <label class="form-label">Quê Quán</label>
                <input type="text" class="form-control" name="quequan" required />
            </div>
            <div class="form-group col-md-6">
                <label class="form-label">Năm Sinh</label>
                <input type="date" class="form-control" name="ngaysinh" required="required" min="1990-01-01" max="2009-12-31" />
            </div>
            <div class="form-group col-md-6">
                <label class="form-label">Mã Khoa</label>
                <select class="form-select" id="cbKhoa" name="makhoa" required></select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Đóng</button>
    </div>
</form>
