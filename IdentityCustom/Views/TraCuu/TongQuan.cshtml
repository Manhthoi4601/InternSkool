@{
    ViewData["Title"] = "Tổng Quan";
}
<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-sub-header">
                    <h3 class="page-title">Thông Tin</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Trang Chủ</a></li>
                        <li class="breadcrumb-item active">Quản Lý</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Sinh Viên</h6>
                            <h3 id="StudentQty"></h3>
                        </div>
                        <div class="db-icon">
                            <img src="/assets/img/icons/dash-icon-01.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Khoa</h6>
                            <h3 id="DepartmentQty"></h3>
                        </div>
                        <div class="db-icon">
                            <img src="/assets/img/icons/dash-icon-03.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Giảng Viên</h6>
                            <h3 id="TeacherQty"></h3>
                        </div>
                        <div class="db-icon">
                            <img src="/assets/img/icons/teacher.png" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 col-12 d-flex">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="db-widgets d-flex justify-content-between align-items-center">
                        <div class="db-info">
                            <h6>Đề Tài</h6>
                            <h3 id="SubjectQty"></h3>
                        </div>
                        <div class="db-icon">
                            <img src="/assets/img/icons/teacher-icon-02.svg" alt="Dashboard Icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 d-flex">

            <div class="card flex-fill student-space comman-shadow">
                <div class="card-header d-flex align-items-center">
                    <h5 class="card-title">Top Sinh Viên</h5>
                    <ul class="chart-list-out student-ellips">
                        <li class="star-menus">
                            <a href="javascript:;"><i class="fas fa-ellipsis-v"></i></a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="DashboardTbl" class="table border-0 star-student table-hover table-center mb-0 table-striped">
                            <thead class="student-thread">
                                <tr>
                                    <th>Mã SV</th>
                                    <th>Họ Tên SV</th>
                                    <th>Tên Đề Tài</th>
                                    <th>GVHD</th>
                                    <th>Khoa</th>
                                    <th>Kết Quả</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts{
    <script src="~/js/thongke.js"></script>
}
